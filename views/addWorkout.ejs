<body>
    <section class="header">
    <div class="container">
        <br>
        <div class="text-center"><h2>Add New Workout</h2></div>
        <br>
        <div class="text-center">
            <form action="/addWorkout" method="POST">
                <label for="Name">Name:</label><br>
                <input type="text" id="Name" name="Name" required><br><br>

                <label for="GymExerciseType">Gym Exercise Type:</label><br>
                <input type="text" id="GymExerciseType" name="GymExerciseType" required><br><br>

                <label for="TotalSets">Total Sets:</label><br>
                <input type="number" id="ToatalSets" name="TotalSets" required><br><br>

                <label for="Date">Date</label><br>
                <input type="date" id="Date" name="Date" required><br><br>

                <button type="submit">Add Workout</button>
            </form>
        </div>
    </div>
    </section>
</body>
</html>